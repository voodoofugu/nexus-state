{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es6",
    "lib": ["dom", "es2019"],
    "declaration": true,
    "outDir": "./dist/types",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": ["react", "node"],
    "typeRoots": ["./node_modules/@types"],
    "strict": true,
    "jsx": "react"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
